{
  "name": "Trillo",
  "version": "1.0.0",
  "description": "Trillo App",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass scss/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass scss/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JayKamana/Trillo.git"
  },
  "author": "James Kamana",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JayKamana/Trillo/issues"
  },
  "homepage": "https://github.com/JayKamana/Trillo#readme",
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "concat": "^1.0.3",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}
